    <insert id="arrangeTime" parameterType="com.hmbackend.bean.WorkTime">
        insert into hospital.worktime(doctor_id, start_time, end_time)
        values (#{doctorId},#{startTime},#{endTime});
    </insert>

    <select id="queryAllDoctor" resultType="com.hmbackend.bean.Doctor">
        select *
        from hospital.doctor;
    </select>

    <select id="queryDoctorByUsername" resultType="com.hmbackend.bean.Doctor">
        select *
        from hospital.doctor
        where doctor.username = #{username};
    </select>
    <select id="queryPatientByUsername" resultType="com.hmbackend.bean.Patient">
        select *
        from hospital.patient
        where patient.username = #{username};
    </select>
